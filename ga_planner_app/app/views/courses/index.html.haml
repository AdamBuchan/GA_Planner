- if can? :create, Course
  = link_to('Create New Course', new_course_path)

%ul
  - @courses.each do |course|
    %li
      %h4= link_to(course.name, course_path(course))
      %p= "Start Date: #{course.start_date}"
      %p= "End date: #{course.end_date}"
      = image_tag(course.image, :width => 50)
      %br/



