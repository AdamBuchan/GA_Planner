%h4= "#{@user.first_name} #{@user.last_name}"
%p= "Email: #{@user.email}"
%p= "Address: #{@user.address}"
%p= "Gender: #{@user.gender}"
%p= "User type: #{@user.level}"
= image_tag(@user.image)
%br/
= link_to('Edit Profile', edit_user_path(@user))
= link_to('Delete User', @user, :method => :delete, :confirm => 'Are you sure?')
%br/
%h5 Course Enrolments:
- @user.courses.each do |course|
  %ul
    %li= course.name 

- if @user.level != 'student'
  %h5 Instructor Enrolments:
  - @user.lessons.each do |lesson|
    %ul
      %li= lesson.name
