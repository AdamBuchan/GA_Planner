- if @user.errors.any?
  %h2 Form is invalid
  %ul
    - @user.errors.full_messages.each do |message|
      %li= message 

= form_for(@user) do |f|
  = f.label :first_name
  = f.text_field :first_name
  %br/
  = f.label :last_name
  = f.text_field :last_name
  %br/
  = f.label :email
  = f.email_field :email
  %br/
  = f.label :address
  = f.text_field :address
  %br/
  = f.label :gender
  = f.text_field :gender
  %br/
  = f.label :image
  = f.file_field :image
  %br/
  = f.label :password
  = f.password_field :password
  %br/
  = f.label :password_confirmation
  = f.password_field :password_confirmation
  %br/
  - if can? :create, InstructorEnrolment
    = f.label :level
    = f.text_field :level

  = f.submit